      	<package name="xf86-video-nv"/>
      	<package name="xf86-video-qxl"/>
      	<package name="xf86-video-r128"/>
      	<package name="xf86-video-savage"/>
      	<package name="xf86-video-siliconmotion"/>
      	<package name="xf86-video-sis"/>
      	<package name="xf86-video-sisusb"/>
      	<package name="xf86-video-tdfx"/>
      	<package name="xf86-video-tga"/>
      	<package name="xf86-video-v4l"/>
      	<package name="xf86-video-vmware"/>
      	<package name="xf86-video-voodoo"/>

        <!-- Kamarada Firstboot -->
        <package name="kamarada-firstboot"/>
        <package name="openbox"/>
        <package name="feh"/>
        <package name="xsetroot"/>

        <!-- Enable support for UEFI secure boot -->
        <package name="shim"/>
        <package name="grub2-x86_64-efi" arch="x86_64"/>

        <!-- Bootsplash and graphics boot related packages -->
        <package name="grub2-branding-kamarada" bootinclude="true"/>

        <!-- KiwiIsoLoaderError: No isolinux loader %s found -->
        <package name="syslinux"/>

        <!-- OBS don't find them if I use <packages type="iso"> -->
        <package name="dracut-kiwi-live"/>

        <!-- Check Installation Media -->
        <package name="checkmedia"/>

        <!-- Calamares installer -->
      	<package name="calamares"/>
      	<package name="calamares-settings-kamarada"/>
        <!-- kamarada/Linux-Kamarada-GNOME#57 - Starting Calamares with kdesu -->
      	<package name="kde-cli-tools5"/>
        <!-- </packages> -->
    </packages>
</image>
