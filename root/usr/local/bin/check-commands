# util-linux
COMMANDS+=('mount')
COMMANDS+=('umount')

# nilfs-utils
COMMANDS+=('mkfs.nilfs2')
COMMANDS+=('mount.nilfs2')

# ntfs-3g
COMMANDS+=('mount.ntfs')

# ntfsprogs
COMMANDS+=('mkfs.ntfs')

# reiser4progs
COMMANDS+=('fsck.reiser4')
COMMANDS+=('mkfs.reiser4')

# reiserfs
COMMANDS+=('fsck.reiserfs')
COMMANDS+=('mkfs.reiserfs')

# udftools
COMMANDS+=('cdrwtool')
COMMANDS+=('mkfs.udf')

# xfsdump
COMMANDS+=('xfsdump')

# xfsprogs
COMMANDS+=('fsck.xfs')
COMMANDS+=('mkfs.xfs')

################################################################################
# Now the script

check_command() {
    # https://stackoverflow.com/a/677212
    return $(command -v "$1" 2>&1 >/dev/null)
}

COMMAND_NOT_FOUND=false
for COMMAND in "${COMMANDS[@]}"
do
    if ! check_command "$COMMAND"
    then
        echo "Error: $COMMAND could not be found"
        COMMAND_NOT_FOUND=true
    fi
done

if [[ "${COMMAND_NOT_FOUND}" == "true" ]]
then
    exit 1
fi
